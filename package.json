{
    "$schema": "https://www.raycast.com/schemas/extension.json",
    "name": "aztu-lms",
    "title": "AzTU LMS",
    "version": "1.0.0",
    "description": "Login to AzTU LMS quickly",
    "icon": "icon.png",
    "author": "yusifaliyevpro",
    "categories": [
        "Productivity"
    ],
    "license": "MIT",
    "platforms": [
        "Windows"
    ],
    "commands": [
        {
            "name": "login-account",
            "title": "Login to AzTU LMS",
            "description": "Login to your AzTU LMS Account",
            "mode": "no-view"
        },
        {
            "name": "see-announcements",
            "title": "See Announcements",
            "description": "See and read latest news about AzTU LMS",
            "mode": "view"
        }
    ],
    "preferences": [
        {
            "name": "username",
            "title": "AzTU LMS username",
            "description": "Write your AzTU LMS username",
            "placeholder": "202501234",
            "type": "textfield",
            "required": true
        },
        {
            "name": "password",
            "title": "AzTU LMS password",
            "description": "Write your AzTU LMS password",
            "type": "password",
            "required": true
        }
    ],
    "dependencies": {
        "@raycast/api": "^1.101.1",
        "@raycast/utils": "^1.19.1",
        "fetch-cookie": "^3.1.0",
        "node-fetch": "^3.3.2",
        "tough-cookie": "^5.1.2"
    },
    "devDependencies": {
        "@raycast/eslint-config": "^1.0.11",
        "@types/node": "18.18.4",
        "@types/react": "19.0.10",
        "eslint": "^8.57.1",
        "prettier": "^3.6.2",
        "typescript": "^5.8.3"
    },
    "scripts": {
        "build": "ray build -e dist",
        "dev": "ray develop",
        "fix-lint": "ray lint --fix",
        "lint": "ray lint",
        "publish": "ray publish"
    }
}
